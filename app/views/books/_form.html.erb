<%= form_with(model: book, local: true) do |form| %> <% if book.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(book.errors.count, "error") %> on saving book:</h2>
  <ul>
    <% book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>
<div class="field">
  <%= form.label :title %> <%= form.text_field :title, id: :book_title %>
</div>
<div class="field">
  <%= form.label :author %> <%= form.text_field :author, id: :book_author %>
</div>
<div class="field">
  <%= form.label :given %> <%= form.text_field :given, id: :book_given %>
</div>
<div class="field">
  <%= form.label :return %> <%= form.text_field :return, id: :book_return %>
</div>

<div class="field">
  <%= form.label :status %> <%= form.select :status, Book.statuses.keys %>
</div>
<div class="actions"><%= form.submit %></div>
<% end %>
