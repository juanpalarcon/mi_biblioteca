<p id="notice"><%= notice %></p>
<h1>My Library</h1>
<%= link_to 'New Book', new_book_path %>
<div class="row">
  <div class="col-md-3 offset-md-2">
    <%= search_form_for @q do |f| %>
    <div class="form-group">
   
      <%# <%= f.search_field :title_or_status_cont, class: "form-control", placeholder: "Search text"%> Status
    </div>
    <div class="form-group">

      <%= f.select :status_eq, options_for_select(Book.statuses , @q.status_eq), {},{class:"form-control"} %>
    </div>
    <%= f.submit "Search", class: "btn btn-primary" %> <% end %>
  </div>
</div>
<div class="row container">
  <div>
    <table class="table">
      <tr>
        <th><%= sort_link(@q, :title) %></th>

        <th><%= sort_link(@q, :author) %></th>
        <th>Given</th>
        <th>Return</th>
        <th>Status</th>
        <th colspan="3"></th>
      </tr>

      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>

        <td><%= book.author %></td>
        <td><%= book.given %></td>
        <td><%= book.return %></td>

        <td><%= book.status %></td>
        <td><% link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td>
          <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are
          you sure?' } %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
