<div class="row">
  <div class="col-md-8 offset-md-2">
    <div class="jumbotron">
      <h1 class="display-4">Welcome to my Library</h1>
      <hr class="my-4" />
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-8 offset-md-2">
    <% @books.each do |book| %>
    <div class="row">
      <div class="col-md-12"><h3><%= book.title%></h3></div>
      <div class="col-md-12 small">
        <span
          ><strong>Created by:</strong>
          <span class="font-weight-light"><%= book.author %></span></span
        >
        <span
          ><strong>on </strong>
          <span class="font-weight-light"><%= book.created_at %></span></span
        >
      </div>
      <div class="col-md-12"><p><%= book.status%></p></div>
    </div>
    <% end %>
    <div class="row">
      <div class="col-md-8 offset-md-2"><%= paginate @books %></div>
    </div>
  </div>
</div>
